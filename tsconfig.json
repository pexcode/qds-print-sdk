{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",           // critical for ESM output
    "moduleResolution": "Bundler",// browser-friendly resolution
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "index.ts", "QR-code.ts"]
}
